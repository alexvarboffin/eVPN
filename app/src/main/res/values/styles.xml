    <style name="OnboardTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/slide_title_sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="OnboardDescription" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/slide_desc_sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="OnboardSkipBtn" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OnboardNextBtn" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

